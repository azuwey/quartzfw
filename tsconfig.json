{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es7" ],
        "locale": "en-US",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "outDir": "public",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "private/**/*"
    ],
    "exclude": [
        "public"
    ]
}